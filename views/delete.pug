extends layout.pug

block content
    div.row
        h1.col Delete Contact
        div.col.d-flex.justify-content-end
            div.p-2
                if !hide_login
                    if user
                        span
                            span(style="margin-right: 10px") Logged in: #{user.fname} #{user.lname}
                            a(href='/logout')
                                button(type='button').btn.btn-primary Logout
                    else
                        a.text-right(href='/login')
                            button(type='button').btn.btn-primary Login
            div.p-2
                a(href='/')
                    button(type='button').btn.btn-primary Home
    h2 #{contact.fname} #{contact.lname}
    form(action="../" + contact.id + '/delete', method='post')
        p Are you sure you want to delete this contact?
        p
            button(type='submit') Delete Contact
            a(href="../" + contact.id) Cancel
        if message
            p #{message}