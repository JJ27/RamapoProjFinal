extends layout.pug

block content
    .container.mt-3
        div.row
            h1.col Contact Info
            div.col.d-flex.justify-content-end
                div.p-2
                    if !hide_login
                        if user
                            span
                                span(style="margin-right: 10px") Logged in: #{user.fname} #{user.lname}
                                a(href='/logout')
                                    button(type='button').btn.btn-primary Logout
                        else
                            a.text-right(href='/login')
                                button(type='button').btn.btn-primary Login
                div.p-2
                    a(href='/')
                        button(type='button').btn.btn-primary Home
        br
        br
        h2 #{contact.fname} #{contact.lname}
        hr
        p
            span
                <strong>Phone Number: </strong>
                span #{contact.phone}
        p
            if contact.contact_phone == 1
                span
                    em May be contacted by phone or text
            else
                span
                    em May NOT be contacted by phone or text
        hr
        p
            span
                <strong>Email Address: </strong>
                span #{contact.email}
        p
            if contact.contact_email == 1
                span
                    em May be contacted by email
            else
                span
                    em May NOT be contacted by email
        hr
        p
            span
                <strong>Address: </strong>
        p
            span #{contact.street}
            br
            span #{contact.city} #{contact.state} #{contact.zip}
            br
            span #{contact.country}
        p
            if contact.contact_mail == 1
                span
                    em May be contacted by mail
            else
                span
                    em May NOT be contacted by mail
        hr
        a(href="../" + contact.id+"/edit")
            button(type='button').btn.btn-info Edit Contact
        a(href="../" + contact.id+"/delete")
            button(type='button').btn.btn-danger Delete Contact
        a(href="/")
            button(type='button').btn.btn-primary Back to List