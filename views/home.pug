extends layout.pug

block content
    table
        thead
            tr
                th Name
                th Phone
                th Email
                th Address
                th Contact
        tbody
            each contact in contacts
                tr
                    td #{contact.fname} #{contact.lname}
                    td #{contact.phone}
                    td #{contact.email}
                    td: #{contact.street} br #{contact.city} #{contact.state} #{contact.zip}
                    td: form
                        input(name="Phone", value=contact.contact_phone, type="hidden")
                        input(name="Email", value=contact.contact_email, type="hidden")
